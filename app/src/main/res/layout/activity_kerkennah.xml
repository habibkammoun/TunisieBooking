<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:ignore="MissingPrefix">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        tools:context=".Kerkennah">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="305dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp">

                <ImageView
                    android:layout_width="128dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/hetel_kerk1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hotel Cercina"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="43dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/localisation" />

                        <TextView
                            android:layout_width="173dp"
                            android:layout_height="wrap_content"
                            android:text=" Hôtel à Ouled Yaneg" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Situé en bord de mer, à Ouled Yaneg, l'Hotel Cercina propose un hébergement 2 étoiles, un jardin, une terrasse et un restaurant.." />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tarif par nuit=" />
                        <TextView
                            android:id="@+id/hotel1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="108"/>
                    </LinearLayout>
                    <Button

                        android:id="@+id/btnSignIn1"
                        android:layout_width="135dp"
                        android:layout_height="64dp"
                        android:layout_marginLeft="5dp"
                        android:background="@color/black"
                        android:text="validate"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="222dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="124dp"
                android:layout_height="309dp"
                android:src="@drawable/hetel_kerk2" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Villa la Palmeraie, Îles Kerkennah "
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="43dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/localisation" />

                    <TextView
                        android:layout_width="173dp"
                        android:layout_height="wrap_content"
                        android:text=" Située à Ouled Kacem" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" la Villa la Palmeraie, Îles Kerkennah propose un hébergement climatisé avec une piscine privée" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tarif par nuit=" />
                    <TextView
                        android:id="@+id/hotel2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="250"/>
                </LinearLayout>

                <Button

                    android:id="@+id/btnSignIn2"
                    android:layout_width="135dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="5dp"
                    android:background="@color/black"
                    android:text="validate"
                    android:textSize="15sp"
                    tools:ignore="DuplicateIds" />
            </LinearLayout>
        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="130dp"
                android:layout_height="175dp"
                android:src="@drawable/hotel_kerk3" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coin de paradis"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="43dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/localisation" />

                    <TextView
                        android:layout_width="173dp"
                        android:layout_height="wrap_content"
                        android:text=" Hôtel à  Ouled Kacem" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Situé à Ouled Kacem, le Coin de paradis propose un bar. Vous bénéficierez gratuitement d'une connexion Wi-Fi et d'un parking privé. Les serviettes et le linge de lit sont fournis." />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tarif par nuit=" />
                    <TextView
                        android:id="@+id/hotel3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="377"/>
                </LinearLayout>

                <Button

                    android:id="@+id/btnSignIn3"
                    android:layout_width="135dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="5dp"
                    android:background="@color/black"
                    android:text="validate"
                    android:textSize="15sp"
                    tools:ignore="DuplicateIds" />
            </LinearLayout>
        </LinearLayout>




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="130dp"
                android:layout_height="175dp"
                android:src="@drawable/hotel_kerk4" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="ExtraText">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Casa Mia "
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="43dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/localisation" />

                    <TextView
                        android:layout_width="173dp"
                        android:layout_height="wrap_content"
                        android:text="  Hôtel à Ouled Kacem" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Située sur l'archipel des Kerkennah, la Casa Mia vous propose un jardin, une terrasse et une connexion Wi-Fi gratuite dans l'ensemble de ses locaux.."/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tarif par nuit=" />
                    <TextView
                        android:id="@+id/hotel4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="272"/>
                </LinearLayout>

                <Button

                    android:id="@+id/btnSignIn4"
                    android:layout_width="135dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="5dp"
                    android:background="@color/black"
                    android:text="validate"
                    android:textSize="15sp"
                    tools:ignore="DuplicateIds" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
