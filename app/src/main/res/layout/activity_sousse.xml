                android:src="@drawable/hotel_sousse2" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hotel Marhaba Beach  "
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="43dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/localisation" />

                    <TextView
                        android:layout_width="173dp"
                        android:layout_height="wrap_content"
                        android:text=" Hotel à Sousse" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Situé à 2 minutes à pied de la plage, l'Hotel Marhaba Beach propose 2 piscines, un spa dispensant des soins de massage, un centre de thalassothérapie et des spectacles 2 fois par semaine." />

                <LinearLayout
                    android:layout_width="wrap_content"
