<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/picture1"
    tools:context=".PrincipaleActivity">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false"
        app:cardBackgroundColor="#00000000"
        android:layout_marginTop="80dp"

        >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kenza Travel Agency is a reputable and reliable local travel agency that knows Tunisia like the back of their hand. With their vast knowledge of the best places to visit in the country, they offer exceptional travel experiences that cater to the unique needs and preferences of each customer. They have a team of experienced and dedicated travel agents who work tirelessly to ensure that every aspect of your trip is well-planned and executed."
        android:lineSpacingMultiplier="1.5"
        android:padding="15dp"
        android:textSize="15sp"
        android:textStyle="bold"

        />
    </androidx.cardview.widget.CardView>




    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content"
        android:text="S'inscrire"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Se connecter"/>

</LinearLayout>
