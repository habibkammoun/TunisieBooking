<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/picture1"
    tools:context=".AccueilActivity">

    <Spinner
        android:id="@+id/mySpinner"
        android:layout_width="217dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="158dp"
        android:layout_marginTop="40dp"
        android:entries="@array/spinner_options"
        android:minHeight="48dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">




        <Button

            android:id="@+id/btnsearch"
            android:layout_width="235dp"
            android:layout_height="64dp"
            android:background="@color/black"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/btn1"
            android:textSize="20sp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="20dp"/>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="false"
            app:cardBackgroundColor="#00000000"
            android:layout_marginTop="100dp"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kenza Travel Agency is a reputable and reliable local travel agency that knows Tunisia like the back of their hand. With their vast knowledge of the best places to visit in the country, they offer exceptional travel experiences that cater to the unique needs and preferences of each customer. They have a team of experienced and dedicated travel agents who work tirelessly to ensure that every aspect of your trip is well-planned and executed."
                android:lineSpacingMultiplier="1.5"
                android:textSize="15sp"
                android:textStyle="bold"
                android:padding="15dp"


                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>


</LinearLayout>

